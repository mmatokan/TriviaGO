<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.fer.ruazosa.networkquiz">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/network_quiz_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/network_quiz_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".CategoryActivity"></activity>


        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".MyProfileActivity"></activity>
        <activity android:name=".ChoosePlayersActivity"></activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>